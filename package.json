{
  "name": "typescript-modular-project",
  "version": "1.0.0",
  "description": "A modular TypeScript project that processes MkDocs and generates files.",
  "main": "src/index.ts",
  "scripts": {
    "start": "ts-node src/index.ts",
    "test": "jest",
    "docs": "typedoc",
    "docs:os": "typedoc"
  },
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "(/test/.*|(\\.|/)(test|spec))\\.ts$"
  },
  "dependencies": {
    "@google/generative-ai": "^0.21.0",
    "@types/js-yaml": "^4.0.9",
    "dotenv": "^16.4.5",
    "ig-typedoc-theme": "^5.0.4",
    "js-yaml": "^4.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^4.7.4",
    "yaml": "^2.6.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/mock-fs": "^4.13.4",
    "@types/node": "^18.19.59",
    "jest": "^29.7.0",
    "mock-fs": "^5.4.0",
    "ts-jest": "^29.2.5",
    "typedoc": "^0.26.10"
  }
}
